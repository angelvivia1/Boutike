<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="well">
        <h2>Registrate</h2>

<% if flash[:alert] %>
    <%= flash[:alert] %>
<% end %>

<%= form_for(@user) do |f| %>
            <div class="form-group">
              <div class="field">
                <%= f.label :user_name, "Nombre"  %><br />
                <%= f.text_field :user_name, :class => 'form-control' %>
                </div>
              </div>
            <div class="form-group">
              <div class="field">
                <%= f.label :email, "Correo electronico" %><br />
                <%= f.email_field :email, autofocus: true, :class => 'form-control' %>
                </div>
              </div>
                <%= f.label :password, "Contraseña" %><br />
                <%= f.password_field :password, autocomplete: "off" , :class => 'form-control' %>
            <div class="form-group">
              <div class="field">
                <%= f.label :password_confirmation, "Confirmar contraseña" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off" , :class => 'form-control' %>
                </div>

              <div class="field">
                <%= f.label :typeUser, "Type" %><br>
                <%= collection_select(:user, :typeUser ,@catalogo_usuarios, :tipo, :tipo, prompt: true, :class => 'form-control') %>

              </div>

              </div>


                <%= f.submit "Registrarse",  :class => "btn btn-success" %>
<% end %>
</div>
    </div>
  </div>
</div>