
<!-- Static navbar -->
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="<%= root_path %>">Control Boutique</a>
    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <li><a href="<%= signup_path  %>">Crear una cuenta</a></li>
        <li class="active"><a href="<%= login_path %>">Iniciar session</a></li>
        <% if logged_in? %>
            <li class="active"><a href="<%=  user_path %>">Mi Perfil</a></li>
        <% end %>

      </ul>
    </div><!--/.nav-collapse -->
  </div><!--/.container-fluid -->
</nav>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="well">
        <h2>Login</h2>
        <%= form_for(:session, url: login_path) do |f| %>
            <div class="form-group">
              <div class="field">
                <%= f.label :email %><br />
             <%= f.text_field :email, autofocus: true, :class => 'form-control'  %>
                </div>
              </div>
            <div class="form-group">
              <div class="field">
                <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off", :class => 'form-control'%>
                </div>
              </div>
            <div class="form-group">
              <div class="field">
            <%= f.check_box :remember_me %>
              <span>Recordar Contrase√±a</span>
                </div>
              </div>
            <%= f.submit "Iniciar sesion", :class => "btn btn-success" %>
        <% end %>

      </div>
    </div>
  </div>
</div>
