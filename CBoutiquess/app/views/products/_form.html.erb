<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">


<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
  <div class="field">
    <%= f.label :code_product, "Codigo"%><br>
    <%= f.number_field :code_product, :class => 'form-control' %>
  </div>
    </div>

    <div class="form-group">
  <div class="field">
    <%= f.label :brand_product, "Marca" %><br>
    <%= f.text_field :brand_product, :class => 'form-control' %>
  </div>
    </div>

    <div class="form-group">
  <div class="field">
    <%= f.label :size_product, "Talla" %><br>
    <%= f.text_field :size_product, :class => 'form-control' %>
  </div>
    </div>

    <div class="form-group">
  <div class="field">
    <%= f.label :type_product, "Tipo" %><br>
    <%= f.text_field :type_product, :class => 'form-control' %>
  </div>
    </div>

    <div class="form-group">
  <div class="field">
    <%= f.label :description_product, "Descripcion" %><br>
    <%= f.text_area :description_product, :class => 'form-control' %>
  </div>
    </div>

    <div class="form-group">
  <div class="field">
    <%= f.label :supplier_product, "Proveedor" %><br>
    <%= collection_select(:product, :supplier_product, @proveedors, :name, :name, prompt: true, :class => 'form-control') %>

  </div>
    </div>

    <div class="form-group">
  <div class="field">
    <%= f.label :price_product, "Precio" %><br>
    <%= f.text_field :price_product, :class => 'form-control' %>
  </div>
    </div>

    <div class="form-group">
  <div class="field">
    <%= f.label :image_product, "Imagen" %><br>
    <%= f.text_field :image_product, :class => 'form-control' %>
  </div>
    </div>

    <div class="form-group">
  <div class="field">
    <%= f.label :status_product, "Status" %><br>
    <%= f.text_field :status_product, :class => 'form-control' %>
  </div>
    </div>
    <div class="form-group">
      <div class="field">
        <%= f.label :stocks, "Existencias" %><br>
        <%= f.text_field :stocks, :class => 'form-control' %>
      </div>
    </div>

  <div class="actions">
    <%= f.submit "Guardar", :class => "btn btn-success" %>
  </div>
<% end %>
